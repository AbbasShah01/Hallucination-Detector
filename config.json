{
  "data": {
    "preprocessed_path": "data/preprocessed/tokenized_data.json",
    "tokenizer_path": "data/preprocessed/tokenizer",
    "test_data_path": null
  },
  "training": {
    "model_name": "distilbert-base-uncased",
    "batch_size": 16,
    "num_epochs": 3,
    "learning_rate": 2e-5,
    "train_ratio": 0.8,
    "val_ratio": 0.1,
    "test_ratio": 0.1
  },
  "verification": {
    "use_entity_verification": true,
    "entity_extractor_method": "spacy",
    "use_wikipedia": false,
    "use_agentic_verification": false,
    "agentic_method": "local",
    "agentic_provider": null
  },
  "fusion": {
    "alpha": 0.7,
    "beta": 0.2,
    "gamma": 0.1,
    "threshold": 0.5
  },
  "evaluation": {
    "num_samples": 10
  }
}

